<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dyszlewskiR.edu.scientling.presentation.fragment.DefinitionPagerFragment"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <TextView
            style="@style/WordTextViewStyle"
            android:layout_height="match_parent"
            android:id="@+id/definition_content_text_view"
            android:padding="@dimen/padding"
            android:layout_above="@+id/separator"
            android:gravity="center_vertical"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:id="@+id/separator"
            android:background="@android:color/darker_gray"
            android:layout_marginLeft="@dimen/margin"
            android:layout_marginRight="@dimen/margin"
            android:layout_centerVertical="true"
            />
        <TextView
            style="@style/WordTextViewStyle"
            android:layout_height="match_parent"
            android:id="@+id/definition_translation_text_view"
            android:layout_below="@id/separator"
            android:padding="@dimen/padding"
            android:gravity="center_vertical"
            />
    </RelativeLayout>
    <Button
        style="@style/ButtonStyle"
        android:id="@+id/definition_translation_button"
        android:layout_margin="@dimen/margin"
        />


</LinearLayout>
