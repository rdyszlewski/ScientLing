<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/margin"
    >
    <TextView
        android:id="@+id/number_words_text_view"
        style="@style/TextViewStyle"
        android:layout_width="wrap_content"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="@+id/textView9"
        app:layout_constraintRight_toRightOf="@+id/textView9"
        android:layout_height="0dp" />
    <TextView
        style="@style/LabelStyle"
        android:layout_width="0dp"
        android:gravity="center_horizontal"
        android:text="@string/number_words"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/textView9"
        app:layout_constraintTop_toBottomOf="@+id/number_words_text_view"
        app:layout_constraintRight_toLeftOf="@+id/guideline"
        app:layout_constraintHorizontal_bias="1.0"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp" />

    <TextView
        android:id="@+id/size_text_view"
        style="@style/TextViewStyle"
        android:layout_width="wrap_content"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="@+id/textView10"
        app:layout_constraintRight_toRightOf="@+id/textView10"
        android:layout_height="0dp" />

    <TextView
        style="@style/LabelStyle"
        android:layout_width="0dp"
        android:gravity="center_horizontal"
        android:text="@string/size"
        android:id="@+id/textView10"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView9"
        app:layout_constraintLeft_toLeftOf="@+id/guideline"
        app:layout_constraintRight_toLeftOf="@+id/guideline3"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_bias="1.0" />

    <TextView
        android:id="@+id/images_size_text_view"
        style="@style/TextViewStyle"
        android:layout_width="wrap_content"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        app:layout_constraintLeft_toLeftOf="@+id/textView11"
        app:layout_constraintRight_toRightOf="@+id/textView11"
        android:layout_height="0dp"
        android:layout_marginStart="5dp" />

    <TextView
        style="@style/LabelStyle"
        android:layout_width="0dp"
        android:gravity="center_horizontal"
        android:text="@string/images_size"
        android:id="@+id/textView11"
        app:layout_constraintRight_toLeftOf="@+id/guideline4"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView10"
        app:layout_constraintLeft_toLeftOf="@+id/guideline3"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_bias="1.0" />

    <TextView
        android:id="@+id/records_size_text_view"
        style="@style/TextViewStyle"
        android:layout_width="wrap_content"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/textView12"
        app:layout_constraintRight_toRightOf="@+id/textView12"
        android:layout_height="0dp" />

    <TextView
        style="@style/LabelStyle"
        android:layout_width="0dp"
        android:gravity="center_horizontal"
        android:text="@string/records_size"
        android:layout_marginRight="5dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView11"
        android:id="@+id/textView12"
        app:layout_constraintLeft_toLeftOf="@+id/guideline4"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        app:layout_constraintHorizontal_bias="0.0" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.25"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="94dp" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline3"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="187dp" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline4"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.75"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="281dp" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/black_overlay"
        android:layout_marginTop="@dimen/margin"
        app:layout_constraintTop_toBottomOf="@+id/textView12"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/view" />

    <TextView
        android:id="@+id/description_text_view"
        style="@style/TextViewStyle"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/view"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0" />
</android.support.constraint.ConstraintLayout>