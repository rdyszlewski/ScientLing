<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_hint"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.dyszlewskiR.edu.scientling.presentation.fragment.HintFragment"
    tools:showIn="@layout/activity_hint"
    android:background="@drawable/shadow_border">
    <TextView
        android:id="@+id/content_label"
        style="@style/LabelStyle"
        android:text="@string/hint_content"
        />
    <EditText
        android:id="@+id/content_edit_text"
        style="@style/EditTextStyle"
        android:layout_below="@id/content_label"/>
    <Button
        android:id="@+id/ok_button"
        style="@style/ButtonStyle"
        android:text="@string/ok"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
