<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:descendantFocusability="blocksDescendants">

    <TextView
        android:id="@+id/name_text_view"
        style="@style/TextViewStyle"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_width="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginLeft="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/textView2"
        android:layout_height="0dp"
        android:layout_marginStart="5dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="5dp" />
    <TextView android:id="@+id/language_l2_text_view"
        style="@style/LabelStyle"
        android:layout_width="wrap_content"
        android:textSize="@dimen/very_small_text_size"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView" />
    <TextView
        style="@style/LabelStyle"
        android:layout_width="wrap_content"
        android:textSize="@dimen/very_small_text_size"
        android:text="-"
        android:id="@+id/textView"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/language_l1_text_view"
        app:layout_constraintLeft_toRightOf="@+id/language_l2_text_view"
        android:layout_marginLeft="8dp" />
    <TextView android:id="@+id/language_l1_text_view"
        style="@style/LabelStyle"
        android:layout_width="wrap_content"
        android:textSize="@dimen/very_small_text_size"
        app:layout_constraintLeft_toRightOf="@+id/textView"
        android:layout_marginLeft="8dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView5" />

    <TextView
        style="@style/LabelStyle"
        android:layout_width="wrap_content"
        android:layout_margin="@dimen/small_margin"
        android:text="@string/number_words"
        android:textSize="@dimen/very_small_text_size"
        android:id="@+id/textView2"
        app:layout_constraintLeft_toLeftOf="@+id/textView5"
        app:layout_constraintRight_toLeftOf="@+id/number_words_text_view"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_height="0dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/number_words_text_view"
        />

    <TextView
        android:id="@id/number_words_text_view"
        style="@style/TextViewStyle"
        android:layout_width="wrap_content"
        android:layout_margin="@dimen/small_margin"
        android:padding="@dimen/small_padding"
        android:textSize="@dimen/very_small_text_size"
        app:layout_constraintRight_toLeftOf="@+id/frameLayout"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="1dp" />

    <TextView
        style="@style/LabelStyle"
        android:layout_width="wrap_content"
        android:layout_margin="@dimen/small_margin"
        android:layout_weight="1"
        android:text="@string/rating"
        android:textSize="@dimen/very_small_text_size"
        app:layout_constraintBaseline_toBaselineOf="@+id/rating_text_view"
        app:layout_constraintRight_toLeftOf="@+id/rating_text_view"
        android:layout_marginRight="1dp"
        android:id="@+id/textView4"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/textView5"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="1dp" />

    <TextView
        android:id="@+id/rating_text_view"
        style="@style/TextViewStyle"
        android:layout_width="wrap_content"
        android:layout_margin="@dimen/small_margin"
        android:padding="@dimen/small_padding"
        android:textSize="@dimen/very_small_text_size"
        app:layout_constraintTop_toBottomOf="@+id/number_words_text_view"
        app:layout_constraintRight_toLeftOf="@+id/frameLayout"
        android:layout_marginRight="-1dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="11dp" />

    <TextView
        style="@style/LabelStyle"
        android:layout_width="wrap_content"
        android:layout_margin="@dimen/small_margin"
        android:layout_weight="1"
        android:text="@string/download_count"
        android:textSize="@dimen/very_small_text_size"
        app:layout_constraintRight_toLeftOf="@+id/downloads_text_view"
        android:layout_marginRight="21dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/downloads_text_view"
        android:id="@+id/textView5"
        android:layout_height="0dp"
        android:layout_marginEnd="22dp" />

    <TextView
        android:id="@+id/downloads_text_view"
        style="@style/TextViewStyle"
        android:layout_width="wrap_content"
        android:layout_margin="@dimen/small_margin"
        android:padding="@dimen/small_padding"
        android:textSize="@dimen/very_small_text_size"

        app:layout_constraintRight_toLeftOf="@+id/frameLayout"
        android:layout_height="0dp"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/rating_text_view"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline2"
        app:layout_constraintVertical_bias="0.0" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="7dp"
        android:layout_marginTop="5dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/frameLayout"
        android:layout_marginEnd="7dp"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline2"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/downloaded_text_view"
            style="@style/TextViewStyle"
            android:layout_width="wrap_content"
            android:text="@string/downloaded"
            android:textColor="@color/correctColor"
            android:textSize="@dimen/very_small_text_size"
            android:layout_gravity="center"
            android:padding="0dp"
            android:layout_margin="0dp"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/is_download_text_view"
            style="@style/TextViewStyle"
            android:layout_width="wrap_content"
            android:text="@string/downloading"
            android:textSize="@dimen/very_small_text_size"
            android:layout_gravity="center"
            android:visibility="gone"/>

        <Button
            android:id="@+id/download_button"
            style="@style/DownloadButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:minWidth="0dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="@string/download"
            android:layout_gravity="center"
            />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/frameLayout2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.238"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintTop_toTopOf="@+id/guideline2"
        android:layout_marginTop="0dp">

        <ProgressBar
            android:id="@+id/download_progress_bar"
            style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            />
    </FrameLayout>

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline2"
        app:layout_constraintGuide_begin="56dp"
        android:orientation="horizontal" />

</android.support.constraint.ConstraintLayout>