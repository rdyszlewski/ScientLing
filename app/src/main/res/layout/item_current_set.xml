<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/set_name_text_view"
        style="@style/TextViewStyle"
        android:textSize="@dimen/large_text_size"
        android:layout_toLeftOf="@+id/set_languages_text_view"
        />

    <TextView
        android:id="@+id/set_languages_text_view"
        style="@style/LabelStyle"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_alignBaseline="@+id/set_name_text_view"
        android:layout_alignBottom="@+id/set_name_text_view"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>