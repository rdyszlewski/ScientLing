<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_set"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.dyszlewskiR.edu.scientling.presentation.fragment.SetFragment"
    tools:showIn="@layout/activity_set"
    android:orientation="vertical"
    android:background="@drawable/shadow_border"

    >

    <TextView
        android:id="@+id/name_label"
        style="@style/TextViewStyle"
        android:text="@string/name"
        />
    <EditText
        style="@style/EditTextStyle"
        android:id="@+id/set_name_edit_text"
        android:layout_below="@id/name_label"/>
    <TextView
        android:id="@+id/l2_label"
        style="@style/TextViewStyle"
        android:text="@string/l2"
        android:layout_below="@id/set_name_edit_text"/>

    <Spinner
        style="@style/SpinnerStyle"
        android:id="@+id/l2_spinner"
        android:layout_below="@id/l2_label"
        />
    <TextView
        android:id="@+id/l1_label"
        style="@style/TextViewStyle"
        android:text="@string/l1"
        android:layout_below="@id/l2_spinner"/>
    <Spinner
       style="@style/SpinnerStyle"
        android:id="@+id/l1_spinner"
        android:layout_below="@id/l1_label"
        />


    <Button
       style="@style/ButtonStyle"
        android:id="@+id/save_button"
        android:layout_marginTop="10dp"
        android:text="@string/save"
        android:layout_alignParentBottom="true"/>


</RelativeLayout>
