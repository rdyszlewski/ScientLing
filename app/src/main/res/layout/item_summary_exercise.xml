<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@id/word_content_text_view"
        style="@style/TextViewStyle"
        android:layout_toLeftOf="@+id/selected_button"
        android:layout_centerVertical="true"
         />
    <TextView
        android:id="@id/word_translation_text_view"
        style="@style/LabelStyle"
        android:textStyle="italic"
        android:layout_below="@+id/word_content_text_view"
        android:layout_toLeftOf="@+id/selected_button"
        android:layout_marginTop="0dp"/>

    <ImageView
        android:id="@+id/selected_button"
        android:layout_width="56dp"
        android:layout_height="56dp"

        android:layout_alignTop="@+id/word_content_text_view"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>