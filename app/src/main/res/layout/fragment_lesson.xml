<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_lesson_edit"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.dyszlewskiR.edu.scientling.presentation.fragment.LessonFragment"
    tools:showIn="@layout/activity_lesson"
    android:background="@drawable/shadow_border">

    <TextView
        style="@style/TextViewStyle"
        android:id="@+id/lesson_number_label"
        android:text="@string/lesson_number"/>

    <EditText
        style="@style/EditTextStyle"
        android:id="@+id/lesson_number_edit_text"
        android:layout_below="@+id/lesson_number_label"
        android:layout_centerHorizontal="true"
        android:inputType="number"/>
    
    <TextView
        style="@style/TextViewStyle"
        android:id="@+id/lesson_name_label"
        android:layout_below="@+id/lesson_number_edit_text"
        android:text="@string/name"/>
    <EditText
        style="@style/EditTextStyle"
        android:id="@+id/lesson_name_edit_text"
        android:layout_below="@+id/lesson_name_label"
        />
   <Button
      style="@style/ButtonStyle"
       android:layout_height="wrap_content"
       android:id="@+id/save_button"
       android:text="@string/save"
       android:layout_alignParentBottom="true"/>

</RelativeLayout>
