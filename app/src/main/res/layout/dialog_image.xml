<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView android:id="@+id/image_image_view"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_weight="1"
        android:layout_gravity="center"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin">
        <ImageButton android:id="@+id/open_button"
            style="@style/ButtonStyle"
            android:layout_width="@dimen/square_button_size"
            android:layout_height="@dimen/square_button_size"
            android:layout_alignParentRight="true"
            />
        <ImageButton android:id="@+id/camera_button"
            style="@style/ButtonStyle"
            android:layout_width="@dimen/square_button_size"
            android:layout_height="@dimen/square_button_size"
            android:layout_toLeftOf="@+id/open_button"
            android:layout_marginRight="@dimen/margin"/>
        <ImageButton android:id="@+id/delete_button"
            style="@style/ButtonStyle"
            android:layout_width="@dimen/square_button_size"
            android:layout_height="@dimen/square_button_size"
            android:visibility="invisible"/>
    </RelativeLayout>
    <Button android:id="@+id/ok_button"
        style="@style/ButtonStyle"
        android:text="@string/ok"
        android:layout_margin="@dimen/margin"
       />
</LinearLayout>