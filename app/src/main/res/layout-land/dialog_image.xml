<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView android:id="@+id/image_image_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.4"
        app:layout_constraintRight_toLeftOf="@+id/camera_button"
        android:layout_marginRight="8dp" />

    <ImageButton android:id="@+id/open_button"
        style="@style/ButtonStyle"
        android:layout_width="@dimen/square_button_size"
        android:layout_height="@dimen/square_button_size"
        android:layout_alignParentRight="true"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageButton android:id="@+id/camera_button"
        style="@style/ButtonStyle"
        android:layout_width="@dimen/square_button_size"
        android:layout_height="@dimen/square_button_size"
        android:layout_toLeftOf="@+id/open_button"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toLeftOf="@+id/open_button"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />

    <Button android:id="@+id/ok_button"
        style="@style/ButtonStyle"
        android:layout_width="0dp"
        android:text="@string/ok"
        android:layout_margin="@dimen/margin"
        android:layout_marginRight="5dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="5dp"
        app:layout_constraintLeft_toRightOf="@+id/image_image_view"
        android:layout_marginLeft="8dp" />

    <ImageButton android:id="@+id/delete_button"
        style="@style/ButtonStyle"
        android:layout_width="@dimen/square_button_size"
        android:layout_height="@dimen/square_button_size"
        android:visibility="invisible"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/ok_button"
        android:layout_marginRight="5dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/open_button"
         />
</android.support.constraint.ConstraintLayout>